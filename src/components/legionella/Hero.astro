---
import { Image } from 'astro:assets';
import GetQuoteModal from '../../reactComponents/GetQuoteModal';
import { FileText, Shield, Settings } from 'lucide-react';
---

<section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white py-20 px-4 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class={`"absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%239C92AC" fill-opacity="0.4"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"`}></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            Legionella 
            <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">
              Schematic Drawing
            </span>
          </h1>
          <p class="text-xl text-slate-300 leading-relaxed">
            Professional CAD services for precise water system mapping and Legionella risk assessment compliance
          </p>
        </div>
        
        <!-- Key Features -->
        <div class="grid sm:grid-cols-3 gap-6">
          <div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <Shield className="w-8 h-8 text-blue-400 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-sm">Risk Assessment</h3>
              <p class="text-xs text-slate-300">Compliance Ready</p>
            </div>
          </div>
          <div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <FileText className="w-8 h-8 text-cyan-400 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-sm">CAD Precision</h3>
              <p class="text-xs text-slate-300">Industry Standard</p>
            </div>
          </div>
          <div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <Settings className="w-8 h-8 text-indigo-400 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-sm">System Mapping</h3>
              <p class="text-xs text-slate-300">Complete Coverage</p>
            </div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
      </div>
      
      <!-- Hero Image -->
      <div class="relative">
        <div class="relative bg-gradient-to-br from-white/20 to-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
          <Image
            src="https://images.unsplash.com/photo-1574342117829-f44f2cd15fc4?q=80&w=751&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
            alt="Professional schematic drawing workspace"
            class="w-full h-80 object-cover rounded-xl shadow-2xl"
            inferSize
          />
          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 bg-blue-500 text-white p-3 rounded-full shadow-lg">
            <FileText className="w-6 h-6" />
          </div>
          <div class="absolute -bottom-4 -left-4 bg-cyan-500 text-white p-3 rounded-full shadow-lg">
            <Shield className="w-6 h-6" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>