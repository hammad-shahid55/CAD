---
import { Phone, Mail, MessageCircle, Sun, Zap, Shield } from 'lucide-react';
---

<section class="bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white py-20 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class={`"absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23FBA94C" fill-opacity="0.4"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"`}></div>
  </div>

  <div class="relative max-w-7xl mx-auto">
    <!-- Main CTA -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        Ready to Harness the Power of
        <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">
          Solar Energy?
        </span>
      </h2>
      <p class="text-xl text-amber-200 max-w-3xl mx-auto mb-8 leading-relaxed">
        Transform your energy future with professional solar PV design. Our expert CAD services 
        ensure maximum efficiency, code compliance, and optimal return on investment.
      </p>
      
      <!-- Primary CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a href="/contact?#contact-form" class="bg-gradient-to-r from-blue-500 to-purple-500 hover:from-darkblue-600 hover:to-orange-600 text-white font-bold px-10 py-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg text-lg">
          Start Your Project
        </a>
        <a href="/contact?#contact-form" class="border-2 border-white/20 hover:border-white/40 text-white font-bold px-10 py-4 rounded-xl transition-all duration-300 backdrop-blur-sm text-lg">
          Start Working With Us
        </a>
      </div>
    </div>

    <!-- Contact Options -->
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl border border-white/20 text-center hover:bg-white/15 transition-all duration-300">
        <div class="bg-yellow-500 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <Phone className="w-8 h-8 text-white" />
        </div>
        <h3 class="text-xl font-bold mb-3">Call Our Experts</h3>
        <p class="text-amber-200 mb-4">Discuss your solar project requirements</p>
        <p class="text-yellow-400 font-semibold">+923138576996</p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl border border-white/20 text-center hover:bg-white/15 transition-all duration-300">
        <div class="bg-orange-500 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <Mail className="w-8 h-8 text-white" />
        </div>
        <h3 class="text-xl font-bold mb-3">Email Us</h3>
        <p class="text-amber-200 mb-4">Send us your project details</p>
        <p class="text-orange-400 font-semibold">solar@cadoutsource.com</p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl border border-white/20 text-center hover:bg-white/15 transition-all duration-300">
        <div class="bg-red-500 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
          <MessageCircle className="w-8 h-8 text-white" />
        </div>
        <h3 class="text-xl font-bold mb-3">Live Consultation</h3>
        <p class="text-amber-200 mb-4">Instant technical support</p>
        <p class="text-red-400 font-semibold">Start Chat</p>
      </div>
    </div>

    <!-- Service Highlights -->
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <div class="flex items-center space-x-4 bg-white/5 backdrop-blur-sm p-6 rounded-xl border border-white/10">
        <div class="bg-yellow-500/20 p-3 rounded-lg">
          <Sun className="w-8 h-8 text-yellow-400" />
        </div>
        <div>
          <h4 class="font-bold text-lg">Optimal Design</h4>
          <p class="text-amber-200 text-sm">Maximum energy production</p>
        </div>
      </div>

      <div class="flex items-center space-x-4 bg-white/5 backdrop-blur-sm p-6 rounded-xl border border-white/10">
        <div class="bg-orange-500/20 p-3 rounded-lg">
          <Zap className="w-8 h-8 text-orange-400" />
        </div>
        <div>
          <h4 class="font-bold text-lg">Fast Delivery</h4>
          <p class="text-amber-200 text-sm">3-5 day turnaround</p>
        </div>
      </div>

      <div class="flex items-center space-x-4 bg-white/5 backdrop-blur-sm p-6 rounded-xl border border-white/10">
        <div class="bg-red-500/20 p-3 rounded-lg">
          <Shield className="w-8 h-8 text-red-400" />
        </div>
        <div>
          <h4 class="font-bold text-lg">Code Compliant</h4>
          <p class="text-amber-200 text-sm">NEC & local standards</p>
        </div>
      </div>
    </div>

    <!-- Final Call to Action -->
    <div class="text-center bg-gradient-to-r from-white/10 to-white/5 backdrop-blur-sm p-8 rounded-2xl border border-white/20">
      <h3 class="text-2xl font-bold mb-4">Join the Solar Revolution Today</h3>
      <p class="text-amber-200 mb-6 max-w-2xl mx-auto">
        Every day you wait is energy and money lost. Start your journey to energy independence 
        with professional solar PV design that maximizes your investment.
      </p>
      <a href="/contact?#contact-form" class="bg-gradient-to-r from-green-500 to-teal-500 hover:from-green-600 hover:to-teal-600 text-white font-bold px-8 py-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg inline-block">
        Start Working With Us Today
      </a>
    </div>
  </div>
</section>