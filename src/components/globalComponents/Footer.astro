<script>
  // TypeScript interfaces for script
  interface ModalElement extends HTMLElement {
    classList: DOMTokenList;
  }

  // Footer Get Quote buttons with enhanced animations
  const footerGetQuoteBtn: HTMLButtonElement | null = document.getElementById('footer-get-quote-btn') as HTMLButtonElement;
  const footerCtaBtn: HTMLButtonElement | null = document.getElementById('footer-cta-btn') as HTMLButtonElement;
  
  const openModal = (): void => {
    const modal: ModalElement | null = document.getElementById('get-quote-modal') as ModalElement;
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  };

  footerGetQuoteBtn?.addEventListener('click', openModal);
  footerCtaBtn?.addEventListener('click', openModal);

  // Smooth scrolling for anchor links with type safety
  const footerLinks: NodeListOf<HTMLAnchorElement> = document.querySelectorAll('footer a[href^="#"]');
  footerLinks.forEach((link: HTMLAnchorElement) => {
    link.addEventListener('click', (e: Event) => {
      e.preventDefault();
      const targetId: string | null = link.getAttribute('href')?.substring(1) || null;
      const targetElement: HTMLElement | null = targetId ? document.getElementById(targetId) : null;
      
      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // Scroll-triggered animations with TypeScript
  const observeFooter: IntersectionObserver = new IntersectionObserver((entries: IntersectionObserverEntry[]) => {
    entries.forEach((entry: IntersectionObserverEntry) => {
      if (entry.isIntersecting) {
        const animatedElements: NodeListOf<HTMLElement> = entry.target.querySelectorAll('.group, .tech-card');
        animatedElements.forEach((el: HTMLElement, index: number) => {
          setTimeout(() => {
            el.style.opacity = '1';
            el.style.transform = 'translateY(0)';
          }, index * 100);
        });
      }
    });
  }, { threshold: 0.1 });

  // Initialize animations with proper typing
  document.addEventListener('DOMContentLoaded', (): void => {
    const footer: HTMLElement | null = document.querySelector('footer');
    if (footer) {
      observeFooter.observe(footer);
      
      // Set initial state for animations
      const animatedElements: NodeListOf<HTMLElement> = footer.querySelectorAll('.group, .tech-card');
      animatedElements.forEach((el: HTMLElement) => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(20px)';
        el.style.transition = 'all 0.6s ease-out';
      });
    }
  });
</script>
