---
// Contact Section
---

<section id="contact" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Get In <span class="text-primary">Touch</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Ready to start your next CAD project? Contact us today and let's discuss how we can bring your vision to life with precision and expertise.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Contact Information -->
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-8">Let's Start a Conversation</h3>
        
        <!-- Contact Methods -->
        <div class="space-y-6 mb-8">
          <!-- Phone -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-900 mb-1">Phone</h4>
              <p class="text-gray-600 mb-2">Call us directly for immediate assistance</p>
              <a href="tel:+923138576996" class="text-primary hover:text-primary/80 font-medium">
                +923138576996
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-900 mb-1">Email</h4>
              <p class="text-gray-600 mb-2">Send us your project details</p>
              <a href="mailto:info@legionellacad.com" class="text-primary hover:text-primary/80 font-medium">
                info@legionellacad.com
              </a>
            </div>
          </div>

          <!-- Location -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-900 mb-1">Location</h4>
              <p class="text-gray-600 mb-2">Based in the United Kingdom</p>
              <p class="text-primary font-medium">
                Serving clients across UK & Europe
              </p>
            </div>
          </div>

          <!-- Working Hours -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-semibold text-gray-900 mb-1">Working Hours</h4>
              <p class="text-gray-600 mb-1">Monday - Friday: 9:00 AM - 6:00 PM</p>
              <p class="text-gray-600">Saturday: 10:00 AM - 4:00 PM</p>
            </div>
          </div>
        </div>

        <!-- Social Links or Additional Info -->
        <div class="bg-gradient-to-r from-primary/5 to-primary/10 rounded-2xl p-6">
          <h4 class="text-lg font-semibold text-gray-900 mb-3">Emergency Support</h4>
          <p class="text-gray-600 mb-4">
            Need urgent assistance? We offer emergency CAD support for critical projects.
          </p>
          <button 
            id="emergency-contact-btn"
            class="bg-primary text-primary-foreground px-6 py-3 rounded-lg hover:bg-primary/90 transition-colors font-medium"
          >
            Emergency Contact
          </button>
        </div>
      </div>

      <!-- Quick Contact Form or CTA -->
      <div class="bg-gray-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Quick Contact</h3>
        
        <div class="space-y-6">
          <div>
            <h4 class="text-lg font-semibold text-gray-900 mb-3">What can we help you with?</h4>
            <div class="grid grid-cols-2 gap-3">
              <button 
                data-service="mapping"
                class="contact-service-btn p-3 text-left border border-gray-200 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors"
              >
                <div class="font-medium text-gray-900">Mapping Services</div>
                <div class="text-sm text-gray-600">Site surveys & mapping</div>
              </button>
              
              <button 
                data-service="design"
                class="contact-service-btn p-3 text-left border border-gray-200 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors"
              >
                <div class="font-medium text-gray-900">Draft & Design</div>
                <div class="text-sm text-gray-600">CAD drawings & plans</div>
              </button>
              
              <button 
                data-service="risk"
                class="contact-service-btn p-3 text-left border border-gray-200 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors"
              >
                <div class="font-medium text-gray-900">Risk Mapping</div>
                <div class="text-sm text-gray-600">Safety & compliance</div>
              </button>
              
              <button 
                data-service="other"
                class="contact-service-btn p-3 text-left border border-gray-200 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors"
              >
                <div class="font-medium text-gray-900">Other Services</div>
                <div class="text-sm text-gray-600">Custom solutions</div>
              </button>
            </div>
          </div>

          <div class="border-t border-gray-200 pt-6">
            <button 
              id="contact-get-quote-btn"
              class="w-full bg-primary text-primary-foreground py-4 rounded-lg hover:bg-primary/90 transition-colors font-semibold text-lg"
            >
              Get Detailed Quote
            </button>
            
            <p class="text-center text-sm text-gray-600 mt-4">
              Or call us directly at 
              <a href="tel:+923138576996" class="text-primary hover:text-primary/80 font-medium">
                +923138576996
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Call to Action Banner -->
    <div class="mt-16">
      <div class="bg-gradient-to-r from-primary to-primary/80 rounded-2xl p-8 md:p-12 text-center text-white">
        <h3 class="text-2xl md:text-3xl font-bold mb-4">
          Ready to Transform Your Ideas into Reality?
        </h3>
        <p class="text-lg mb-8 opacity-90 max-w-2xl mx-auto">
          Join hundreds of satisfied clients who trust LegionellaCAD for their precision engineering and design needs.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button 
             onclick="window.location.href = '/contact?#contact-form';"
            id="final-get-quote-btn"
            class="bg-white text-primary px-8 py-4 rounded-lg hover:bg-gray-100 transition-colors font-semibold text-lg"
          >
            Start Your Project
          </button>
          <a 
            href="tel:+923138576996"
            class="border border-white text-white px-8 py-4 rounded-lg hover:bg-white/10 transition-colors font-semibold text-lg"
          >
            Call Now
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Contact Get Quote buttons
  const contactGetQuoteBtn = document.getElementById('contact-get-quote-btn');
  const finalGetQuoteBtn = document.getElementById('final-get-quote-btn');
  const emergencyContactBtn = document.getElementById('emergency-contact-btn');
  
  const openModal = () => {
    const modal = document.getElementById('get-quote-modal');
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  };

  contactGetQuoteBtn?.addEventListener('click', openModal);
  finalGetQuoteBtn?.addEventListener('click', openModal);
  emergencyContactBtn?.addEventListener('click', openModal);

  // Service selection buttons
  const serviceButtons = document.querySelectorAll('.contact-service-btn');
  serviceButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active state from all buttons
      serviceButtons.forEach(btn => {
        btn.classList.remove('border-primary', 'bg-primary/5');
        btn.classList.add('border-gray-200');
      });
      
      // Add active state to clicked button
      button.classList.remove('border-gray-200');
      button.classList.add('border-primary', 'bg-primary/5');
    });
  });
</script>
