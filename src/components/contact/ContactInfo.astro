---
// ContactInfo.astro
const contactMethods = [
  {
    id: 'phone',
    title: 'Call Us',
    subtitle: 'Speak directly with our team',
    primary: '+923138576996',
    secondary: 'Available 9 AM - 6 PM GMT',
    icon: 'phone',
    gradient: 'from-blue-500 to-cyan-500',
    href: 'tel:+923138576996'
  },
  {
    id: 'email',
    title: 'Email Us',
    subtitle: 'Get detailed responses',
    primary: 'hamadsami672@gmail.com',
    secondary: 'hamadsami672@gmail.com',
    icon: 'email',
    gradient: 'from-purple-500 to-violet-500',
    href: 'mailto:hamadsami672@gmail.com'
  },
  {
    id: 'location',
    title: 'Visit Us',
    subtitle: 'Our birmingham office',
    primary: 'Birmingham B16 8DD',
    secondary: 'B16 8DD',
    icon: 'location',
    gradient: 'from-green-500 to-emerald-500',
    href: '#'
  }
];

const supportInfo = [
  {
    title: 'Response Time',
    value: '< 24 Hours',
    icon: 'clock'
  },
  {
    title: 'Support Hours',
    value: '9 AM - 6 PM GMT',
    icon: 'calendar'
  },
  {
    title: 'Emergency Support',
    value: 'Available',
    icon: 'support'
  },
  {
    title: 'Free Consultation',
    value: 'Yes',
    icon: 'consultation'
  }
];
---

<section class="py-24 bg-gradient-to-br from-gray-50 to-blue-50 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class={`absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"%3E%3Cpath d="M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zM77 36c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zM32 75c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7z" fill="%23000000"/%3E%3C/svg%3E')]`}></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center px-6 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6">
        <span class="w-2 h-2 bg-primary rounded-full animate-pulse mr-3"></span>
        <span class="text-primary font-semibold">Get In Touch</span>
      </div>
      
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Multiple Ways to
        <span class="text-primary">
          Reach Us
        </span>
      </h2>
      
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Whether you need a quick quote, technical consultation, or have questions about our services, we're here to help.
      </p>
    </div>

    <!-- Contact Methods Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {contactMethods.map((method, index) => (
        <a 
          href={method.href}
          class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-gray-100 hover:border-gray-200 hover:-translate-y-2 block"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Gradient Header -->
          <div class={`h-2 bg-gradient-to-r ${method.gradient}`}></div>
          
          <!-- Card Content -->
          <div class="p-8">
            <!-- Icon -->
            <div class={`w-16 h-16 rounded-xl bg-gradient-to-r ${method.gradient} p-0.5 mb-6 group-hover:scale-110 transition-transform duration-300`}>
              <div class="w-full h-full bg-white rounded-xl flex items-center justify-center">
                {method.icon === 'phone' && (
                  <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                )}
                {method.icon === 'email' && (
                  <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                )}
                {method.icon === 'location' && (
                  <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
              </div>
            </div>

            <!-- Title -->
            <h3 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors duration-300">
              {method.title}
            </h3>

            <!-- Subtitle -->
            <p class="text-gray-600 mb-4">
              {method.subtitle}
            </p>

            <!-- Primary Info -->
            <p class="text-lg font-semibold text-gray-900 mb-1">
              {method.primary}
            </p>

            <!-- Secondary Info -->
            <p class="text-sm text-gray-500">
              {method.secondary}
            </p>

            <!-- Action Icon -->
            <div class="mt-6 flex justify-end">
              <div class={`w-8 h-8 rounded-full bg-gradient-to-r ${method.gradient} flex items-center justify-center group-hover:scale-110 transition-transform duration-300`}>
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </div>

          <!-- Hover Effect -->
          <div class={`absolute inset-0 bg-gradient-to-r ${method.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-300 pointer-events-none`}></div>
        </a>
      ))}
    </div>

    <!-- Support Information -->
    <div class="bg-white rounded-3xl shadow-xl p-8 lg:p-12 border border-gray-100">
      <div class="text-center mb-12">
        <h3 class="text-3xl font-bold text-gray-900 mb-4">
          Why Choose Our
          <span class="text-primary"> Support</span>
        </h3>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We're committed to providing exceptional service and support for all your CAD project needs.
        </p>
      </div>

      <!-- Support Stats Grid -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {supportInfo.map((info, index) => (
          <div 
            class="text-center group"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Icon -->
            <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
              {info.icon === 'clock' && (
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {info.icon === 'calendar' && (
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              )}
              {info.icon === 'support' && (
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              )}
              {info.icon === 'consultation' && (
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              )}
            </div>

            <!-- Value -->
            <h4 class="text-2xl font-bold text-primary mb-2">
              {info.value}
            </h4>

            <!-- Title -->
            <p class="text-gray-700 font-semibold">
              {info.title}
            </p>
          </div>
        ))}
      </div>

      <!-- Emergency Support Note -->
      <div class="mt-12 p-6 bg-gradient-to-r from-red-50 to-orange-50 rounded-2xl border border-red-100">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-r from-red-500 to-orange-500 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
            </div>
          </div>
          <div>
            <h4 class="text-lg font-semibold text-gray-900 mb-2">
              Emergency Support Available
            </h4>
            <p class="text-gray-600">
              For urgent project requirements outside business hours, contact our emergency support line. Additional charges may apply for rush services.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>