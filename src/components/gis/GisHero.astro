---
import { Map, Layers, MapPin, Database } from 'lucide-react';
import { Image } from 'astro:assets';
---

<section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white py-16 sm:py-20 px-4 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class={`"absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%239C92AC" fill-opacity="0.4"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"`}></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Content -->
      <div class="space-y-6 sm:space-y-8 order-2 lg:order-1">
        <div class="space-y-4">
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            Facilities Mapping 
            <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">
              & GIS
            </span>
            <span class="block">Services</span>
          </h1>
          <p class="text-lg sm:text-xl text-slate-300 leading-relaxed">
            Advanced geographic information systems and facility mapping solutions. 
            Transform your spatial data into actionable insights for better decision-making and operations.
          </p>
        </div>
        
        <!-- Key Features -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
          <div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <Map className="w-6 sm:w-8 h-6 sm:h-8 text-blue-400 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-sm">Spatial Mapping</h3>
              <p class="text-xs text-slate-300">GIS Analysis</p>
            </div>
          </div>
          <div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <Layers className="w-6 sm:w-8 h-6 sm:h-8 text-cyan-400 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-sm">Data Integration</h3>
              <p class="text-xs text-slate-300">Multi-Source</p>
            </div>
          </div>
          <div class="flex items-center space-x-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <Database className="w-6 sm:w-8 h-6 sm:h-8 text-indigo-400 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-sm">Asset Management</h3>
              <p class="text-xs text-slate-300">Digital Solutions</p>
            </div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
      </div>
      
      <!-- Hero Image -->
      <div class="relative order-1 lg:order-2">
        <div class="relative bg-gradient-to-br from-white/20 to-white/5 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-white/10">
          <Image 
            src="https://images.unsplash.com/photo-1559526324-4b87b5e36e44?w=600&h=400&fit=crop&crop=entropy&auto=format&q=80"
            alt="GIS mapping and facilities management technology"
            width={600}
            height={320}
            class="w-full h-64 sm:h-80 object-cover rounded-xl shadow-2xl"
          />
          <!-- Floating elements -->
          <div class="absolute -top-2 sm:-top-4 -right-2 sm:-right-4 bg-blue-500 text-white p-2 sm:p-3 rounded-full shadow-lg">
            <Map className="w-4 sm:w-6 h-4 sm:h-6" />
          </div>
          <div class="absolute -bottom-2 sm:-bottom-4 -left-2 sm:-left-4 bg-cyan-500 text-white p-2 sm:p-3 rounded-full shadow-lg">
            <MapPin className="w-4 sm:w-6 h-4 sm:h-6" />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>