---
// src/components/drafting/DraftingImpactSection.astro
---

<section class="py-16 sm:py-20 lg:py-24 bg-slate-900 text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      
      <!-- Section Header -->
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
          Impact of Professional 2D Drafting & Design
        </h2>
      </div>
      
      <!-- Stats Grid -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
        
        <div class="text-center group">
          <div class="text-3xl lg:text-4xl font-bold text-blue-400 mb-2 group-hover:scale-110 transition-transform duration-300">95%</div>
          <div class="text-slate-400 text-sm mb-1">Approval Success</div>
          <div class="text-xs text-slate-500">Regulatory compliance rate</div>
        </div>
        
        <div class="text-center group">
          <div class="text-3xl lg:text-4xl font-bold text-cyan-400 mb-2 group-hover:scale-110 transition-transform duration-300">80%</div>
          <div class="text-slate-400 text-sm mb-1">Error Reduction</div>
          <div class="text-xs text-slate-500">Construction accuracy improvement</div>
        </div>
        
        <div class="text-center group">
          <div class="text-3xl lg:text-4xl font-bold text-purple-400 mb-2 group-hover:scale-110 transition-transform duration-300">65%</div>
          <div class="text-slate-400 text-sm mb-1">Time Savings</div>
          <div class="text-xs text-slate-500">Project timeline efficiency</div>
        </div>
        
        <div class="text-center group">
          <div class="text-3xl lg:text-4xl font-bold text-green-400 mb-2 group-hover:scale-110 transition-transform duration-300">100%</div>
          <div class="text-slate-400 text-sm mb-1">CAD Standards</div>
          <div class="text-xs text-slate-500">Industry compliance</div>
        </div>
      </div>
    </div>
  </div>
</section>