---
import SendMessageModal from "../../reactComponents/SendMessageModal";
import { Image } from "astro:assets";

---

<section id="home" class="relative  min-h-[95dvh] flex items-center justify-center bg-gradient-to-br from-gray-49 to-gray-100">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src="https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?q=80&w=2070&auto=format&fit=crop" 
      alt="CAD Design Background"
      class="w-full h-full object-cover opacity-20"
      loading="eager"
      inferSize
    />
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Left Content -->
      <div class="text-center lg:text-left">
        <!-- Hashtags -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-2 mb-6">
          <span class="text-sm text-gray-600 bg-white/80 px-3 py-1 rounded-full">
            #LegionellaCADService
          </span>
          <span class="text-sm text-gray-600 bg-white/80 px-3 py-1 rounded-full">
            #CADService
          </span>
          <span class="text-sm text-gray-600 bg-white/80 px-3 py-1 rounded-full">
            #CADOutsource
          </span>
        </div>

        <!-- Main Heading -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          Looking for Next-Level 
          <span class="text-primary">Precision</span> in Your 
          <span class="text-primary">CAD Designs?</span>
        </h1>

        <!-- Subheading -->
        <p class="text-lg md:text-xl text-gray-700 mb-8 max-w-2xl mx-auto lg:mx-0">
          Leverage our two-decade expertise to enhance design fidelity, 
          accelerate development cycles, and streamline project delivery.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">

  <SendMessageModal client:load />
          
          <a 
            href="tel:+923138576996"
            class="bg-red-600 text-white px-8 py-4 rounded-lg hover:bg-red-700 transition-all duration-200 font-semibold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            +923138576996
          </a>
        </div>

        <!-- Contact Info -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-6 text-gray-600">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm">UK Based CAD Services</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm">4+ Years Experience</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Content - Image/Visual -->
      <div class="hidden lg:block">
        <div class="relative">
          <Image
            src="https://images.pexels.com/photos/271667/pexels-photo-271667.jpeg" 
            alt="CAD Design Illustration"
            class="w-full h-auto rounded-2xl shadow-2xl opacity-75"
            loading="eager"
            inferSize
          />
          
          <!-- Floating Cards -->
          <div class="absolute -top-6 -left-6 bg-white p-4 rounded-xl shadow-lg">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">100% Accurate</p>
                <p class="text-sm text-gray-600">Precision Guaranteed</p>
              </div>
            </div>
          </div>

          <div class="absolute -bottom-6 -right-2 bg-white p-4 rounded-xl shadow-lg">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Fast Delivery</p>
                <p class="text-sm text-gray-600">On-Time Results</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>

<script>
  // Hero Get Quote button
  const heroGetQuoteBtn = document.getElementById('hero-get-quote-btn');
  
  heroGetQuoteBtn?.addEventListener('click', () => {
    const modal = document.getElementById('get-quote-modal');
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });
</script>
