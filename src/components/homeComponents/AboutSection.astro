---
// src/components/AboutSection.astro
import ContactForm from '../../reactComponents/SendInstantMessage';
---

<section class="py-20 bg-gradient-to-br from-slate-50 to-blue-50">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      
      <!-- Content Section -->
      <div class="space-y-8">
        <!-- Header -->
        <div class="space-y-4">
          <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            World-Class CAD Solutions
          </div>
          
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
            Experience Premium
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
              CAD Services
            </span>
            From Industry Experts
          </h2>
        </div>

        <!-- Description -->
        <div class="space-y-6 text-gray-600 text-lg leading-relaxed">
          <p>
            CAD Outsource delivers exceptional CAD services across all utility sectors including 
            <span class="font-semibold text-gray-800">Water, Gas, Electricity, and Infrastructure</span>. 
            Our comprehensive suite includes advanced CAD conversion, precision 2D drafting, 
            immersive 3D modeling, photorealistic rendering, and cutting-edge GIS Services.
          </p>
          
          <p>
            With our highly skilled team of certified professionals, we provide unmatched 
            CAD outsourcing services regardless of project complexity or scale. Every team 
            member undergoes continuous training on state-of-the-art technology, utilizing 
            industry-leading workstations and software, all secured by enterprise-grade 
            security systems.
          </p>
        </div>

        <!-- Features Grid -->
        <div class="grid sm:grid-cols-2 gap-6">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900">Expert Team</h4>
              <p class="text-gray-600 text-sm">Certified professionals with 10+ years experience</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900">Secure Systems</h4>
              <p class="text-gray-600 text-sm">Enterprise-grade security and data protection</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900">Cost Effective</h4>
              <p class="text-gray-600 text-sm">Premium quality at 60% less than in-house costs</p>
            </div>
          </div>

          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900">24/7 Support</h4>
              <p class="text-gray-600 text-sm">Round-the-clock technical support and assistance</p>
            </div>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="pt-4">
          <button onclick="window.location.href='/legionella-schematic-drawing'" class="cursor-pointer group inline-flex items-center px-6 py-3 bg-primary text-primary-foreground font-semibold rounded-xl hover:bg-primary/90 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
            Discover Our Services
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Premium Contact Form - React Component -->
      <div class="lg:sticky lg:top-8">
        <ContactForm client:visible />
      </div>
    </div>
  </div>
</section>
