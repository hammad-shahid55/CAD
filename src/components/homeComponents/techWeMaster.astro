---

<div class="py-12 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h5 class="text-lg md:text-xl font-bold text-gray-900 mb-2 uppercase tracking-wider">
        Technologies & Software We Master
      </h5>
      <p class="text-gray-600 mb-8 text-sm md:text-base">
        Industry-leading tools for precision CAD design and engineering
      </p>
      
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6 max-w-6xl mx-auto">
        {technologies.map((tech: Technology) => (
          <div class="group bg-white hover:bg-gray-50 rounded-xl p-4 md:p-6 transition-all duration-300 hover:scale-105 border border-gray-200 hover:border-primary/50 shadow-sm hover:shadow-md">
            <div class="flex flex-col items-center gap-3">
              <div class="w-12 h-12 md:w-16 md:h-16 bg-gray-100 rounded-lg flex items-center justify-center group-hover:bg-gray-200 transition-all duration-300">
                <svg class={`w-6 h-6 md:w-8 md:h-8 ${tech.iconColor} group-hover:scale-110 transition-transform duration-300`} fill="currentColor" viewBox="0 0 24 24">
                  <path d={tech.icon}></path>
                </svg>
              </div>
              <span class="text-xs md:text-sm font-semibold text-gray-700 group-hover:text-primary transition-colors duration-300 text-center">
                {tech.name}
              </span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>