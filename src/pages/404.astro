---
// src/pages/404.astro
import Layout from '@/layouts/main.astro';
---

<Layout title="Page Not Found | CAD Outsource">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 relative overflow-hidden flex items-center justify-center">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0">
      <!-- Floating Geometric Shapes -->
      <div class="absolute top-20 left-20 w-32 h-32 border-2 border-blue-400/30 rounded-lg rotate-45 animate-spin-slow"></div>
      <div class="absolute top-40 right-32 w-24 h-24 border-2 border-purple-400/30 rounded-full animate-pulse"></div>
      <div class="absolute bottom-32 left-1/4 w-40 h-40 border-2 border-cyan-400/20 rounded-lg rotate-12 animate-float"></div>
      <div class="absolute bottom-20 right-1/4 w-28 h-28 border-2 border-violet-400/25 rounded-full animate-bounce-slow"></div>
      
      <!-- Grid Pattern -->
      <div class={`absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.02"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30`}></div>
      
      <!-- Gradient Orbs -->
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <!-- Left Side - Content -->
        <div class="text-center lg:text-left space-y-8">
          <!-- Animated 404 -->
          <div class="relative">
            <h1 class="text-8xl md:text-9xl font-black text-transparent bg-gradient-to-r from-blue-400 via-purple-400 to-cyan-400 bg-clip-text leading-none">
              404
            </h1>
            
            <!-- Glitch Effect Overlay -->
            <div class="absolute inset-0 text-8xl md:text-9xl font-black text-red-500/20 leading-none animate-glitch">
              404
            </div>
            
            <!-- Decorative Elements -->
            <div class="absolute -top-4 -right-4 w-16 h-16 border-2 border-yellow-400 rounded-full animate-ping opacity-75"></div>
            <div class="absolute -bottom-4 -left-4 w-12 h-12 border-2 border-green-400 rounded-lg rotate-45 animate-pulse"></div>
          </div>

          <!-- Error Message -->
          <div class="space-y-4">
            <h2 class="text-3xl md:text-4xl font-bold text-white leading-tight">
              Oops! This page has
              <span class="text-red-500">
                gone missing
              </span>
            </h2>
            
            <p class="text-xl text-slate-300 leading-relaxed max-w-lg">
              It seems like the CAD drawing you're looking for has been moved to a different blueprint. 
              Let's help you find your way back to our main designs.
            </p>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a 
              href="/"
              class="group relative px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl font-bold text-white transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/25 overflow-hidden"
            >
              <span class="relative z-10 flex items-center justify-center gap-3">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Back to Home
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-blue-700 to-purple-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </a>
            
            <a 
              href="/contact?#contact-form"
              class="group px-8 py-4 border-2 border-white/20 rounded-2xl font-bold text-white backdrop-blur-sm hover:bg-white/10 transition-all duration-300 hover:border-white/40"
            >
              <span class="flex items-center justify-center gap-3">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Get Help
              </span>
            </a>
          </div>

          <!-- Popular Links -->
          <div class="pt-8 border-t border-white/10">
            <p class="text-slate-400 mb-4 font-semibold">Popular destinations:</p>
            <div class="flex flex-wrap gap-3">
              <a href="/services" class="px-4 py-2 bg-white/5 rounded-lg text-slate-300 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm">
                Our Services
              </a>
              <a href="/sectors" class="px-4 py-2 bg-white/5 rounded-lg text-slate-300 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm">
                Industry Sectors
              </a>
              <a href="/about" class="px-4 py-2 bg-white/5 rounded-lg text-slate-300 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm">
                About Us
              </a>
            </div>
          </div>
        </div>

        <!-- Right Side - Creative Visual -->
        <div class="relative">
          <!-- Main Illustration Container -->
          <div class="relative group">
            <!-- Background Circle -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-full blur-3xl group-hover:scale-110 transition-transform duration-700"></div>
            
            <!-- CAD-themed Illustration -->
            <div class="relative bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10 group-hover:border-white/20 transition-all duration-500">
              
              <!-- Technical Drawing Animation -->
              <div class="relative h-80 overflow-hidden rounded-2xl bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700">
                
                <!-- Grid Background -->
                <div class="absolute inset-0 opacity-20">
                  <div class="w-full h-full" style="background-image: linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px); background-size: 20px 20px;"></div>
                </div>
                
                <!-- Animated Technical Lines -->
                <svg class="absolute inset-0 w-full h-full" viewBox="0 0 400 320">
                  <!-- Blueprint-style lines -->
                  <g stroke="currentColor" stroke-width="1" fill="none" class="text-blue-400/60">
                    <path d="M50 50 L350 50" class="animate-draw-line" style="animation-delay: 0.5s;"/>
                    <path d="M50 50 L50 270" class="animate-draw-line" style="animation-delay: 1s;"/>
                    <path d="M50 270 L350 270" class="animate-draw-line" style="animation-delay: 1.5s;"/>
                    <path d="M350 270 L350 50" class="animate-draw-line" style="animation-delay: 2s;"/>
                    
                    <!-- Interior lines -->
                    <path d="M100 50 L100 270" class="animate-draw-line" style="animation-delay: 2.5s;"/>
                    <path d="M300 50 L300 270" class="animate-draw-line" style="animation-delay: 3s;"/>
                    <path d="M50 100 L350 100" class="animate-draw-line" style="animation-delay: 3.5s;"/>
                    <path d="M50 220 L350 220" class="animate-draw-line" style="animation-delay: 4s;"/>
                  </g>
                  
                  <!-- Dimension lines -->
                  <g stroke="currentColor" stroke-width="1" fill="none" class="text-yellow-400/60">
                    <path d="M60 40 L60 30 M340 40 L340 30 M60 30 L340 30" class="animate-draw-line" style="animation-delay: 4.5s;"/>
                    <path d="M40 60 L30 60 M40 260 L30 260 M30 60 L30 260" class="animate-draw-line" style="animation-delay: 5s;"/>
                  </g>
                  
                  <!-- Measurement text -->
                  <text x="200" y="25" text-anchor="middle" class="text-yellow-400 text-xs font-mono opacity-0 animate-fade-in" style="animation-delay: 5.5s;">300mm</text>
                  <text x="20" y="165" text-anchor="middle" class="text-yellow-400 text-xs font-mono opacity-0 animate-fade-in" style="animation-delay: 6s;" transform="rotate(-90 20 165)">220mm</text>
                </svg>
                
                <!-- Floating Elements -->
                <div class="absolute top-4 right-4 w-8 h-8 bg-green-400 rounded-full animate-pulse opacity-60"></div>
                <div class="absolute bottom-4 left-4 w-6 h-6 bg-red-400 rounded-lg rotate-45 animate-bounce opacity-60"></div>
                
                <!-- CAD Tools Icons -->
                <div class="absolute bottom-4 right-4 flex gap-2">
                  <div class="w-6 h-6 bg-blue-500/60 rounded flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                    </svg>
                  </div>
                  <div class="w-6 h-6 bg-purple-500/60 rounded flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                  </div>
                </div>
              </div>
              
              <!-- Status Bar -->
              <div class="mt-6 flex items-center justify-between p-3 bg-slate-800/50 rounded-xl">
                <div class="flex items-center gap-3">
                  <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
                  <span class="text-slate-300 text-sm font-mono">drawing_not_found.dwg</span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-slate-400 text-xs">Status:</span>
                  <span class="text-red-400 text-xs font-semibold">Missing</span>
                </div>
              </div>
            </div>
            
            <!-- Floating Decorative Elements -->
            <div class="absolute -top-6 -right-6 w-12 h-12 bg-gradient-to-r from-yellow-400 to-orange-400 rounded-full opacity-80 animate-float"></div>
            <div class="absolute -bottom-4 -left-4 w-8 h-8 bg-gradient-to-r from-green-400 to-blue-400 rounded-lg rotate-45 opacity-70 animate-pulse"></div>
          </div>
          
          <!-- Additional Floating Elements -->
          <div class="absolute top-1/4 -left-8 w-16 h-16 border-2 border-cyan-400/30 rounded-full animate-spin-slow"></div>
          <div class="absolute bottom-1/4 -right-8 w-12 h-12 border-2 border-purple-400/30 rounded-lg rotate-12 animate-bounce-slow"></div>
        </div>
      </div>
    </div>

    <!-- Bottom Wave -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden">
      <svg class="relative block w-full h-16" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".1" fill="#ffffff"></path>
      </svg>
    </div>
  </div>
</Layout>

<style>
  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
  }
  
  @keyframes glitch {
    0% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
    100% { transform: translate(0); }
  }
  
  @keyframes draw-line {
    0% { stroke-dasharray: 0 1000; }
    100% { stroke-dasharray: 1000 0; }
  }
  
  @keyframes fade-in {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }
  
  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }
  
  .animate-bounce-slow {
    animation: bounce-slow 3s ease-in-out infinite;
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-glitch {
    animation: glitch 0.3s ease-in-out infinite alternate;
  }
  
  .animate-draw-line {
    stroke-dasharray: 0 1000;
    animation: draw-line 2s ease-in-out forwards;
  }
  
  .animate-fade-in {
    opacity: 0;
    animation: fade-in 0.5s ease-in-out forwards;
  }
</style>